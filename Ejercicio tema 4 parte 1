public class Main {
    public static void main(String[] args) {
        var numero = 0;

        if (numero > 0) {
            System.out.println(numero + " Es positivo");
        } else if (numero < 0) {
            System.out.println(numero + " Es negativo");
        } else {
            System.out.println("0");
        }

    }
}
